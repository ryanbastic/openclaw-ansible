FROM node:22-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm and Clawdbot as root
ENV PNPM_HOME="/usr/local/bin"
RUN npm install -g pnpm && \
    pnpm config set global-bin-dir /usr/local/bin && \
    pnpm install -g @clawdbot/clawdbot

# Create user and directories
RUN useradd -m -s /bin/bash clawdbot && \
    mkdir -p /home/clawdbot/.clawdbot/sessions /home/clawdbot/.clawdbot/credentials && \
    chown -R clawdbot:clawdbot /home/clawdbot/.clawdbot

# Switch to clawdbot user
USER clawdbot
WORKDIR /home/clawdbot

# Expose default port (only accessible via localhost binding)
EXPOSE {{ clawdbot_port }}

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD pnpm list -g @clawdbot/clawdbot || exit 1

# Keep container running and responsive
CMD ["sh", "-c", "while true; do sleep 3600; done"]
